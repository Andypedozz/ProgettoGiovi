---
import "../../styles/home.css"
import ProjectCard from "./ProjectCard.astro"

const projects = [
    { image: "images/opia.jpg", title: "OpiaSS25"},
    { image: "images/robys.jpg", title: "Pizzeria Roby's"},
    { image: "images/supermoto.jpg", title: "Supermoto"},
    { image: "images/enoteca.jpg", title: "Enoteca Montevecchio"},
]
---

<div>
    <!-- Header -->
    <header>
        <div class="container">
            <div class="header-content">
                <div class="logo">Giovanni Uguccioni</div>
                <nav>
                    <!-- <a href="#works">Lavori</a>
                    <a href="#about">Chi sono</a>
                    <a href="#services">Servizi</a> -->
                    <a href="/admin">Admin</a>
                    <a href="/login">Login</a>
                    <a href="/signup">Registrati</a>
                    <a href="/api/logout">Logout</a>
                    <a href="#cta">Contattami</a>
                </nav>
            </div>
        </div>
    </header>

    <!-- Hero - MODIFICATA -->
    <section class="hero">
        <div class="container">
            <div class="hero-content">
                <img class="hero-image" src="images/hero.jpg" alt="">
                <div class="hero-text">
                    <h1>Where Creativity meets Emotion</h1>
                    <p>
                        We design, film, and tell stories that connect
                        brands with people – through visuals that move
                        hearts.
                    </p>
                    <a href="#works" class="hero-cta">
                        <span>Explore our world</span>
                        <i class="fas fa-arrow-down"></i>
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Works -->
    <section id="works" class="works">
        <div class="container">
            <h2>I nostri lavori</h2>
            <div class="works-grid">
                 {projects.map(project => <ProjectCard project={project}/>)}
            </div>
        </div>
    </section>

    <!-- About -->
    <section id="about" class="about">
        <div class="container">
            <div class="about-content">
                <div class="about-text">
                    <h2>Chi sono</h2>
                    <p>
                        We are a team of storytellers, designers, and
                        filmmakers committed to crafting meaningful
                        experiences. Each project we produce aims to merge
                        aesthetics, emotion, and strategy into one seamless
                        narrative.
                    </p>
                </div>
                <div class="about-grid">
                    <div class="about-item">
                        <h3>Vision</h3>
                        <p>
                            We envision a world where visuals inspire
                            empathy and creativity drives connection.
                        </p>
                    </div>
                    <div class="about-item">
                        <h3>Mission</h3>
                        <p>
                            To translate human emotion into visual form –
                            one frame at a time.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Services -->
    <section id="services" class="services">
        <div class="container">
            <div class="services-content">
                <div class="services-visual">
                    <div>
                        <i
                            class="fas fa-play-circle"
                            style="font-size: 4rem; opacity: 0.7;"></i>
                    </div>
                </div>
                <div class="services-info">
                    <h2>Di cosa mi occupo</h2>
                    <div class="services-grid">
                        <div class="service-item">
                            <div class="service-icon">
                                <i class="fas fa-video"></i>
                            </div>
                            <h3>Video Production</h3>
                            <p>
                                From cinematic ads to brand documentaries,
                                we capture emotion with precision and
                                artistic vision.
                            </p>
                        </div>
                        <div class="service-item">
                            <div class="service-icon">
                                <i class="fas fa-palette"></i>
                            </div>
                            <h3>Design & Branding</h3>
                            <p>
                                Visual identities that speak louder than
                                words – crafted to stand out and make an
                                impact.
                            </p>
                        </div>
                        <div class="service-item">
                            <div class="service-icon">
                                <i class="fas fa-sliders-h"></i>
                            </div>
                            <h3>Post-Production</h3>
                            <p>
                                Editing, color grading, and motion that
                                breathe life into every project with
                                meticulous attention.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA -->
    <section id="cta" class="cta">
        <div class="container">
            <div class="cta-content">
                <h2>Let's craft your next story together</h2>
            </div>
        </div>
        <div class="container">
            <div class="contact-content">
                <p>Have a project in mind or want to learn more about our services? Send us a message and we'll get back to you as soon as possible.</p>
                
                <div class="contact-form-container">
                    <form class="contact-form">
                        <div class="form-group">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" id="email" class="form-input" placeholder="esempio@email.com" required>
                        </div>
                        
                        <div class="form-group">
                            <label for="subject" class="form-label">Oggetto</label>
                            <input type="text" id="subject" class="form-input" placeholder="Di che si tratta?" required>
                        </div>
                        
                        <div class="form-group">
                            <label for="message" class="form-label">Messaggio</label>
                            <textarea id="message" class="form-textarea" placeholder="Dicci del tuo progetto..." required></textarea>
                        </div>
                        
                        <button type="submit" class="contact-button">
                            <span>Invia</span>
                            <span>→</span>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h5>Record Studio Srl</h5>
                    <p>
                        Via Tullio Piccinini 35<br />31033 Castelfranco
                        Veneto, TV
                    </p>
                </div>
                <div class="footer-section">
                    <h5>Contacts</h5>
                    <p>
                        +39 342 3514967<br /><a
                            href="mailto:info@recordstudio.it"
                            >info@recordstudio.it</a>
                    </p>
                </div>
                <div class="footer-section">
                    <h5>Language</h5>
                    <p>
                        <a href="#">English</a> ·
                        <a href="#">Italiano</a>
                    </p>
                </div>
            </div>
            <div class="footer-bottom">
                © 2025 Record Studio – All rights reserved
            </div>
        </div>
    </footer>
</div>